		} else {
			anchorText = "[" + template.HTMLEscapeString(left) + "]"
		}
		escapedURL := template.HTMLEscapeString(url)
		anchor := `<a class="` + className + `" href="` + escapedURL + `" target="_blank">` + anchorText + `</a>`
