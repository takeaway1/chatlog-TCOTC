{
  "name": "next-js-boilerplate",
  "version": "0.1.0",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/sidecar",
    "dev:next": "next dev",
    "dev": "run-p dev:*",
    "dev:chatlog": "node scripts/dev-chatlog.js",
    "build:next": "next build",
    "build": "run-p build:* --race",
    "build:static": "node scripts/build-static.js",
    "build:chatlog": "pnpm build:static && node scripts/copy-to-go.js",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push --verbose",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "lighthouse": "unlighthouse-ci --site localhost:3000",
    "test:lighthouse": "run-p start lighthouse --race"
  },
